<Window x:Class="Vistas.WinLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:control="clr-namespace:Vistas.controlUsuario"
        Title="Cinemax" Height="300" Width="300" MaxHeight="300" MaxWidth="300" MinHeight="300" MinWidth="300"
        Icon="/Vistas;component/images/icono-cine.ico"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        
        <Grid.Background>
            <ImageBrush ImageSource="/Vistas;component/images/bg.jpg" />
        </Grid.Background>
        
        <StackPanel Margin="20,20,20,20">
            <control:Login x:Name="login"/>
            <Label Name="lblError" Foreground="Red" Margin="0,10,0,0"/>
            <Button Name="btnIniciar" Content="Iniciar Sesion" Margin="60,10,60,0" Click="btnIniciar_Click" Style="{StaticResource ResourceKey=EstiloBtn}"/>
        </StackPanel>
        
    </Grid>
</Window>
