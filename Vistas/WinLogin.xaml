<Window x:Class="Vistas.WinLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cinemax" Height="300" Width="300"
        Icon="/Vistas;component/images/icono-cine.ico"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        
        <Grid.Background>
            <ImageBrush ImageSource="/Vistas;component/images/bg.jpg" />
        </Grid.Background>
        
        <StackPanel Margin="20,20,20,20">
            <Label Name="lblTitulo" Content="BIENVENIDO" Foreground="White" FontSize="20" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Name="lblUsuario" Content="Usuario" Foreground="White" Margin="0,10,0,0"/>
            <TextBox Name="txtUsuario" Foreground="White" Margin="0,0,0,0"  Background="Transparent" CaretBrush="White"/>
            <Label Name="lblPassword" Content="Contraseña" Foreground="White" Margin="0,10,0,0"/>
            <PasswordBox Name="pwbPassword" Foreground="White" Margin="0,0,0,0" Background="Transparent" CaretBrush="White"/>
            <Label Name="lblError" Foreground="Red" Margin="0,10,0,0"/>
            <Button Name="btnIniciar" Content="Iniciar Sesion" Margin="60,10,60,0" Click="btnIniciar_Click" />
        </StackPanel>
        
    </Grid>
</Window>
